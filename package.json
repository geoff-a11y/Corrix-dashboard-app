{
  "name": "corrix-dashboard",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:api": "npm run dev -w @corrix/api",
    "dev:dashboard": "npm run dev -w @corrix/dashboard",
    "build": "npm run build --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "migrate": "npm run migrate -w @corrix/api",
    "seed": "npm run seed -w @corrix/api"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  }
}
